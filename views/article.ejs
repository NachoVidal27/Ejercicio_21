<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="../css/styles.css" />
    <link rel="icon" type="image/x-icon" href="img/favicon.ico">
    <title><%= article.title %> | Wired Up</title>
  </head>
  <body>
    <%- include("partials/navbar") %>
    <div id="article-container">
            <h1><%=article.title%></h1>
            <img src="<%=article.img1%>" alt="" />
            <p><%=article.content %></p>
            <img src="<%=article.img2%>" alt="" />
            <div class="author-container">
            </div>
        </div>
        <div id="comments-container">
          <form action="/comentarios/<%= article.id %>" method="post">
            <textarea name="comment" id="comment" cols="70" rows="4" placeholder="Agrega tu comentario!"></textarea>
            <button type="submit">Enviar</button>
          </form>
          <% console.log(article.comments) %>
          <% article.comments.forEach(comment => {%> 
            <div class="comment-card"> 
               <p><%= comment.content %></p>
              </div>
              <% }) %>
        </div>
    <%-include("partials/footer") %>
    <script src="../js/app.js"></script>
  </body>
</html>
